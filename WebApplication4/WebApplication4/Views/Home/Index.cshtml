@using WebApplication4.Models;
@model IEnumerable<PostModel>
@{
    ViewBag.Title = "Home Page";
}

@if (Session["displayuser"] != null && Session["displayuser"].GetType() == typeof(FullUser))
{

    <div class="row">
        <div class="col-md-3">
            @{ var user = (FullUser)Session["displayuser"];
                <div class="row">
                    <h4>@user.FullName</h4>
                    </div>
                    var age = DateTime.UtcNow.Year - user.BirthDate.Year;
                    <div class="row">
                        <label class="control-label">@age Years Old</label>
                    </div>
                    <div class="row">
                        <label class="control-label">@user.City</label>
                    </div>
                    <div class="row">
                        <label class="control-label">@(user.WorkPlace != null ? ("Works at " + user.WorkPlace) : "")</label>
                    </div>
                    
                </div>
            
            <div class="col-md-6">
                @Html.Partial("_PostsPartial",Model)
            </div>
            }
            <div class="col-md-1">
                <h4>Notifications</h4>
            </div>
        </div>



}
else
